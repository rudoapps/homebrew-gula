import dagger.Binds
import dagger.Module
import dagger.Provides
import dagger.hilt.InstallIn
import dagger.hilt.components.SingletonComponent
import retrofit2.Retrofit
import javax.inject.Singleton

@Module
@InstallIn(SingletonComponent::class)
abstract class {{TEMPLATE_NAME}}Module {
    
    @Binds
    abstract fun bind{{TEMPLATE_NAME}}Repository(
        {{PARAM_NAME}}RepositoryImpl: {{TEMPLATE_NAME}}RepositoryImpl
    ): {{TEMPLATE_NAME}}Repository
    
    companion object {
        @Provides
        @Singleton
        fun provide{{TEMPLATE_NAME}}RemoteDataSource(retrofit: Retrofit): {{TEMPLATE_NAME}}RemoteDataSource {
            return retrofit.create({{TEMPLATE_NAME}}RemoteDataSource::class.java)
        }
    }
}