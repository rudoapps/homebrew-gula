import 'package:flutter/material.dart';
import 'package:flutter_bloc/flutter_bloc.dart';

import '../../domain/entities/{{PARAM_NAME}}.dart';
import '../bloc/{{PARAM_NAME}}_bloc.dart';

class {{TEMPLATE_NAME}}Page extends StatelessWidget {
  const {{TEMPLATE_NAME}}Page({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('{{TEMPLATE_NAME}}s'),
      ),
      body: BlocBuilder<{{TEMPLATE_NAME}}Bloc, {{TEMPLATE_NAME}}State>(
        builder: (context, state) {
          if (state is {{TEMPLATE_NAME}}Loading) {
            return const Center(child: CircularProgressIndicator());
          } else if (state is {{TEMPLATE_NAME}}Loaded) {
            return {{TEMPLATE_NAME}}ListView({{PARAM_NAME}}s: state.{{PARAM_NAME}}s);
          } else if (state is {{TEMPLATE_NAME}}Error) {
            return Center(
              child: Column(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  Text(
                    'Error: ${state.message}',
                    style: const TextStyle(color: Colors.red),
                  ),
                  const SizedBox(height: 16),
                  ElevatedButton(
                    onPressed: () => context.read<{{TEMPLATE_NAME}}Bloc>()
                        .add(GetAll{{TEMPLATE_NAME}}sEvent()),
                    child: const Text('Retry'),
                  ),
                ],
              ),
            );
          }
          return const Center(child: Text('Welcome to {{TEMPLATE_NAME}}s'));
        },
      ),
    );
  }
}

class {{TEMPLATE_NAME}}ListView extends StatelessWidget {
  final List<{{TEMPLATE_NAME}}> {{PARAM_NAME}}s;

  const {{TEMPLATE_NAME}}ListView({
    Key? key,
    required this.{{PARAM_NAME}}s,
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    if ({{PARAM_NAME}}s.isEmpty) {
      return const Center(
        child: Text('No {{PARAM_NAME}}s found'),
      );
    }

    return ListView.builder(
      itemCount: {{PARAM_NAME}}s.length,
      itemBuilder: (context, index) {
        final {{PARAM_NAME}} = {{PARAM_NAME}}s[index];
        return {{TEMPLATE_NAME}}ListTile({{PARAM_NAME}}: {{PARAM_NAME}});
      },
    );
  }
}

class {{TEMPLATE_NAME}}ListTile extends StatelessWidget {
  final {{TEMPLATE_NAME}} {{PARAM_NAME}};

  const {{TEMPLATE_NAME}}ListTile({
    Key? key,
    required this.{{PARAM_NAME}},
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return ListTile(
      title: Text({{PARAM_NAME}}.name),
      subtitle: Text('ID: ${{{PARAM_NAME}}.id}'),
      onTap: () {
        // Navigate to detail page if needed
      },
    );
  }
}